{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "types": ["node", "express", "multer", "jsonwebtoken", "bcryptjs"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
